{
  "name": "ch2pla",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Evan <github@erosson.org>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "prepare": "elm-package install --yes",
    "tf:init": "terraform init",
    "tf:plan": "terraform plan",
    "tf:apply": "terraform apply -auto-approve",
    "export:icons": "scripty",
    "export:chars": "scripty",
    "export:post-chars": "./scripts/postexport/chars ./assets/ch2data/chars/latest.json",
    "export:as3": "scripty",
    "dev": "cp CHANGELOG.md ./assets && elm-live ./src/Main.elm --output=./assets/elm.js --dir=./assets --open",
    "build": "rm -rf ./dist && mkdir -p ./dist && cp CHANGELOG.md ./dist && rsync -auv ./assets/ ./dist/ && elm-make ./src/Main.elm --output=./dist/elm.js",
    "//test": "you probably want to run this with --watch, like 'yarn test --watch'",
    "format": "elm-format --yes src && prettier --write assets/ports.js assets/stats.json",
    "lint": "elm-format --validate src && prettier --list-different assets/ports.js assets/stats.json",
    "test": "yarn lint && elm-test",
    "deploy:purge-cloudflare-cache": "scripty",
    "start": "yarn build && serve ./dist"
  },
  "//optionalDependencies": "because travis fails to install me, but doesn't actually need me",
  "optionalDependencies": {
    "terraform-npm": "0.2.6"
  },
  "dependencies": {},
  "devDependencies": {
    "elm": "^0.18.0",
    "elm-format": "^0.6.1-alpha",
    "elm-live": "^2.7.5",
    "elm-test": "^0.18.12",
    "prettier": "^1.14.0",
    "scripty": "^1.7.2"
  }
}
